@using BTCPayServer.Abstractions.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ConfigurationViewModel
@{
    ViewData.SetActivePage(StripePlugin.PluginNavKey, "Stripe Api Key Configuration", "Configuration");
}

<form method="post">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <input type="submit" class="btn btn-primary" id="Submit" value="Submit" />
    </div>

    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="StripeApiKey" class="form-label"></label>
                <input asp-for="StripeApiKey" class="form-control" />
                <span asp-validation-for="StripeApiKey" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
