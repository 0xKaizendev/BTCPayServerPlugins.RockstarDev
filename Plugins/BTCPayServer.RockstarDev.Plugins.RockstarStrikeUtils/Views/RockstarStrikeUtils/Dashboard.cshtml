@using BTCPayServer.Abstractions.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DashboardViewModel
@{
    ViewData.SetActivePage(RockstarStrikeUtilsPlugin.PluginNavKey, "Rockstar Strike Dashboard", "Dashboard");
}

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-xl-8 col-xxl-constrain">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StrikeApiKey" class="form-label" data-required></label>
                <input asp-for="StrikeApiKey" class="form-control" required />
                <span asp-validation-for="StrikeApiKey" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="btn btn-primary" id="Submit" value="Submit" />
            </div>
        </form>
    </div>
</div>
